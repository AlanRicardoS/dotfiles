# i3-gaps config file
#
# source: https://github.com/luiznux/dotfiles/i3
#
# Please see https://i3wm.org/docs/userguide.html for a complete reference!


#---------- Basic Definitions -------------#

set $mod	    Mod4
set $term       urxvt
set $browser    firefox


#-------------- Key Bindings ----------------#

# start a terminal
bindsym $mod+Return	 exec $term

# start emacs.
bindsym $mod+e	     exec emacs

# start firefox 
bindsym $mod+m       exec $browser

# start nemo filemanager
bindsym $mod+n       exec nemo

#full screem
bindsym $mod+f	     fullscreen toggle

# kill focused window.
bindsym $mod+q	   	 kill

#-------- Window moviment
#
# change focus
bindsym $mod+h									focus left
bindsym $mod+j 									focus down
bindsym $mod+k 									focus up
bindsym $mod+l 									focus right

#other keys 
bindsym $mod+Left								focus left
bindsym $mod+Down  								focus down
bindsym $mod+Up    								focus up
bindsym $mod+Right 								focus right

# move focused window
bindsym $mod+Shift+h							move left
bindsym $mod+Shift+j 							move down
bindsym $mod+Shift+k 							move up
bindsym $mod+Shift+l 							move right


#----------------- Colors ----------------------#
#
# The ~/.Xresources should contain a line such as
#     *color0: #121212
# and must be loaded properly, e.g., by using
#     xrdb ~/.Xresources
# This value is picked up on by other applications (e.g., the URxvt terminal
# emulator) and can be used in i3 like this:
#

#black
set_from_resource $black i3wm.color0
set_from_resource $black i3wm.color8

#red
set_from_resource $red i3wm.color1
set_from_resource $redki3wm.color9

#green
set_from_resource $green i3wm.color2
set_from_resource $green i3wm.color10

#yellow
set_from_resource $yellow i3wm.color3
set_from_resource $yellow i3wm.color11

#blue
set_from_resource $blue i3wm.color4
set_from_resource $blue i3wm.color12

#magenta
set_from_resource $magenta i3wm.color5
set_from_resource $magenta i3wm.color13

#cyan
set_from_resource $cyan i3wm.color6
set_from_resource $cyan i3wm.color14
 
#white
set_from_resource $white i3wm.color7
set_from_resource $white i3wm.color15


#---------------- workspaces ---------------#

#define workspace
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"

# switch to workspace
bindsym $mod+1		workspace $ws1
bindsym $mod+2		workspace $ws2
bindsym $mod+3		workspace $ws3
bindsym $mod+4		workspace $ws4
bindsym $mod+5		workspace $ws5
bindsym $mod+6		workspace $ws6

# move focused container to workspace
bindsym $mod+Shift+1	move container to workspace $ws1
bindsym $mod+Shift+2	move container to workspace $ws2
bindsym $mod+Shift+3	move container to workspace $ws3
bindsym $mod+Shift+4	move container to workspace $ws4
bindsym $mod+Shift+5	move container to workspace $ws5
bindsym $mod+Shift+6	move container to workspace $ws6


#------------- Font config --------------#
font pango:Source Code Pro 13


#config background
exec_always feh --bg-scale ~/.config/wallpaper.jpg
